<div class="main">
  <div class="container containerResp">
    <div class="titlePage" style="margin-bottom: 14px !important;">
      <label>CADASTRO DE USUÁRIO COM CHAVE</label>
    </div>
    <center>
      <div class="middle">
        <div id="login" class="loginResponsive" style="border-right: 0px !important;">
          <%= form_with model: @user, url: api_accesses_path, method: :post, local: true do |f| %>
            <fieldset class="clearfix">
              <div style="width:340px;" class="inputAllResponsive">
                <div class="wrapper"><p><span class="fa fa-user"></span>
                  <%= f.text_field :first_name, :required => true, placeholder: "Nome", style: 'width: 300px', class: ' inputResponsive' %></p>
                </div>
                <div class="wrapper"><p><span class="fa fa-user"></span>
                  <%= f.text_field :last_name, :required => true, placeholder: "Sobrenome", style: 'width: 300px', class: ' inputResponsive' %></p>
                </div>
                <div class="wrapper"><p><span class="fa fa-at"></span>
                  <%= f.text_field :email, :required => true, placeholder: "E-Mail", style: 'width: 300px', class: ' inputResponsive' %></p>
                </div>
                <div class="error">
                  <%= @user.errors[:email][1] if @user.errors.include?(:email) %>
                </div>
                <div class="wrapper"><p><span class="fa fa-at"></span>
                  <%= f.text_field :ext_id, placeholder: 'Campo Adicional' %></p>
                </div>
                <div class="wrapper"><p><span class="fa fa-at"></span>
                  <%= f.label :api_accesses_level_id, 'Nível de permissão de chave' %>
                  <%= f.select :api_accesses_level_id, Array(1..4) %></p>
                </div>
                <div class="ui-group-buttons" style="width: 100% !important;">
                  <a href="/" class="btn btn-danger" role="button" style="width: 49%;"><span class="glyphicon glyphicon-remove"></span>
                    Cancelar</a>
                  <div class="or"></div>
                  <button class="btn btn-success" style="width: 49%;"><span class="glyphicon glyphicon-ok"></span>
                    Criar Usuário
                  </button>
                </div>
              </div>
            </fieldset>
            <div class="clearfix"></div>
            <div class="clearfix"></div>
          <% end %>
        </div>
      </div>
    </center>
  </div>
</div>