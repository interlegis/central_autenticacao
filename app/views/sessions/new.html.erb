<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
<div class="main">
  <div class="container">
    <div class="titlePage">
      <label>CENTRAL DE AUTENTICAÇÃO</label>
    </div>
    <center>
      <div class="middle">
        <div id="login">
          <form>
            <%= form_with scope: :user, url: sessions_path, local: true do |f| %>
            <fieldset class="clearfix">

              <div style="width:250px;">
                <p><span class="fa fa-user"></span><%= f.text_field :email %></p> <!-- JS because of IE support; better: placeholder="Username" -->
                <p style="margin-bottom: 0px !important;"><span class="fa fa-lock"></span><%= f.password_field :password , style: 'margin-bottom: 0px !important' %></p> <!-- JS because of IE support; better: placeholder="Password" -->
                <span style="text-align:left;  display: inline-block; margin-bottom: 9px;"><a class="small-text" href="#">Esqueci minha senha</a></span>

                <div class="ui-group-buttons" style="width: 100% !important;">
                  <a href="/users/new" class="btn btn-danger" role="button" style="width: 49%;"><span class="glyphicon glyphicon-user"></span> Sign Up</a>
                  <div class="or"></div>
                  <a href="http://www.jquery2dotnet.com" class="btn btn-success" role="button" style="width: 49%;"><span class="glyphicon  glyphicon-log-in"></span> Log In</a>
                </div>
              </div>
              <div>

<!--
                <span style="text-align:right;  display: inline-block;"><%= f.submit 'Entrar' %></span>
-->
                <div  style="margin-left: auto; margin-right: auto;">
                  <a href="/oauth/facebook"  class="btn-social btn-facebook"><i class="fa fa-facebook"></i></a>
                  <a href="/oauth/google"  class="btn-social btn-google-plus"><i class="fa fa-google-plus"></i></a>
                  <a href="/senado" class="btn-social btn-senado"><img src="https://www12.senado.leg.br/hpsenado/icon_senado.png" style="width: 16px" id="imgLogin"></a>
                  <a href="/interlegis" class="btn-social btn-interlegis"><img src="http://www.interlegis.leg.br/logo.png" style="width: 16px" id="imgLogin"></a>
                </div>
              </div>
            </fieldset>
            <div class="clearfix"></div>
          </form>
          <div class="clearfix"></div>
            <% end %>
        </div> <!-- end login -->
        <div class="logo">
            <img src="https://www.senado.leg.br/atividade/plenario/ordemdodia/Img/brasaoColorDeg.png" style="width: 190px;">
        </div>
      </div>
    </center>
  </div>
</div>




