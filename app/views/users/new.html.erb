<%= form_with model: @user, local: true do |f| %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name, :required => true %> <br>
  <%= f.label :email %>
  <%= f.text_field :email, :required => true %> <br>
  <%= f.label :password, 'Senha' %>
  <%= f.password_field :password, :required => true %> <br>
  <%= f.label :password_confirmation, 'Confirmar Senha' %>
  <%= f.password_field :password_confirmation, :required => true %> <br>
  <%= f.submit 'Criar Conta' %>
<% end %>